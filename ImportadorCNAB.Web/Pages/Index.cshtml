@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Importador CNAB</h1>

    <div class="row">
        <form method="post" enctype="multipart/form-data">
         
            <div class="input-group mb-3 col-4">
                <input name="fileInput" type="file" class="form-control" id="fileInput">
                <label class="input-group-text" for="fileInput">Upload</label>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
   

    @if (Model.ShowSuccessMessage)
    {
        <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="successModalLabel">Sucesso!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-success" role="alert">
                            <p>Seu arquivo foi enviado com sucesso.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            $(function () {

                const myModal = new bootstrap.Modal('#successModal', {
                    keyboard: false
                })
                myModal.show();
            });
        </script>
    }

    @if (!Model.ShowSuccessMessage)
    {
        <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="errorModalLabel">Erro!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-danger" role="alert">
                            <p>@Model.MensagemErro</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
         
                $(function () {

                    const myModalerro = new bootstrap.Modal('#errorModal', {
                        keyboard: false
                    })
                    myModalerro.show();
                });
            
        </script>
    }
</div>
